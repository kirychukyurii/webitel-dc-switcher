# Example Nginx configuration for reverse proxy
# This shows how to host DC Switcher behind a reverse proxy with custom base path

# Option 1: Host at root path (/)
server {
    listen 80;
    server_name dc-switcher.example.com;

    location / {
        proxy_pass http://localhost:4647/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

# Option 2: Host at custom path (/dc-switcher) - Simple proxy
# In this case, also set base_path: "/dc-switcher" in config.yaml
# This is the RECOMMENDED approach - backend handles the base path
server {
    listen 80;
    server_name example.com;

    location /dc-switcher/ {
        proxy_pass http://localhost:4647/dc-switcher/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Optional: redirect /dc-switcher to /dc-switcher/
    location = /dc-switcher {
        return 301 /dc-switcher/;
    }
}

# Option 3: Host with HTTPS
server {
    listen 443 ssl http2;
    server_name dc-switcher.example.com;

    ssl_certificate /path/to/cert.pem;
    ssl_certificate_key /path/to/key.pem;

    location / {
        proxy_pass http://localhost:4647/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
